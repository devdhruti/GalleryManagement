<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissible">
    <button type = "button" class="close" data-dismiss = "alert">x</button>
      <ul style="list-style: none;">
        <% resource.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
  </div>
<% end %>
